    },
    "gazettedIndicator": {
      "type": "string",
      "description": "Indication if the company is gazetted",
      "enum": [
        "Y",
        "N"
      ]
    },
    "formerName": {
      "$ref": "../../../common/definitions/1.0/schema.json#/definitions/formerNames"
    },
    "incorporationDate": {
      "$ref": "../../../common/definitions/1.0/schema.json#/definitions/date"
    },
    "companyType": {
      "$ref": "../../../common/definitions/1.0/schema.json#/definitions/companyType"
    },
    "status": {
      "$ref": "../../../common/definitions/1.0/schema.json#/definitions/entityStatus"
    },
    "statusDate": {
      "$ref": "../../../common/definitions/1.0/schema.json#/definitions/date"
    },
    "amalgamatedFrom": {
      "$ref": "../../../common/definitions/1.0/schema.json#/definitions/amalgamatedFrom"
    },
    "amalgamatedWith": {
      "$ref": "../../../common/definitions/1.0/schema.json#/definitions/amalgamatedWith"
