    "changeOfAddressDate": {
      "$ref": "../../../common/definitions/1.0/schema.json#/definitions/date"
    },
    "agm": {
      "type": "array",
      "maxItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "lastAgmDate": {
            "$ref": "../../../common/definitions/1.0/schema.json#/definitions/date"
