    "representatives": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "../../../common/definitions/1.0/schema.json#/definitions/person"
          }
        ],
        "properties": {
          "appointmentDate": {
            "$ref": "../../../common/definitions/1.0/schema.json#/definitions/date"
          },
          "position": {
            "type": "string"
          },
          "disqualificationText": {
            "type": "string"
          },
          "altDirector": {
            "$ref": "../../../common/definitions/1.0/schema.json#/definitions/person"
          }
        },
        "required": [
          "appointmentDate",
          "position"
        ]
      }
    },
    "shareholders": {
      "type": "array",
      "items": {
        "$ref": "../../../common/definitions/1.0/schema.json#/definitions/shareholder"
      }
