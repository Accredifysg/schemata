    "shareholderGroups": {
      "type": "array",
      "items": {
        "$ref": "../../../common/definitions/1.0/schema.json#/definitions/shareholderGroup"
      }
    },
    "judicialManagers": {
      "type": "array",
      "items": {
        "$ref": "../../../common/definitions/1.0/schema.json#/definitions/otherMembers"
      }
    },
    "liquidators": {
      "type": "array",
      "items": {
        "$ref": "../../../common/definitions/1.0/schema.json#/definitions/otherMembers"
      }
