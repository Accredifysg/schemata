    "dateOfTransfer": {
      "$ref": "../../../common/definitions/1.0/schema.json#/definitions/date"
    },
    "asredomDtls": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "countryOfOriginalIncorporation": {
            "$ref": "../../../common/definitions/1.0/schema.json#/definitions/country"
          },
          "dateOfOriginalIncorporation": {
            "$ref": "../../../common/definitions/1.0/schema.json#/definitions/date"
          },
          "nameOnDeregistration": {
            "$ref": "../../../common/definitions/1.0/schema.json#/definitions/entityName"
          },
          "registrationHistory": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "countryOfRegistration": {
                  "$ref": "../../../common/definitions/1.0/schema.json#/definitions/country"
                },
                "registrationDateistration": {
                  "$ref": "../../../common/definitions/1.0/schema.json#/definitions/date"
                },
                "registeredNameOnDeregistration": {
                  "$ref": "../../../common/definitions/1.0/schema.json#/definitions/entityName"
                }
              },
              "required": [
                "countryOfRegistration",
                "registeredNameOnDeregistration",
                "registrationDateistration"
              ],
              "title": "RegistrationHistory"
            }
          },
          "conditionOfRegistration": {
            "type": "string"
          }
        }
      }
    },
    "registrationCountry": {
      "$ref": "../../../common/definitions/1.0/schema.json#/definitions/country"
