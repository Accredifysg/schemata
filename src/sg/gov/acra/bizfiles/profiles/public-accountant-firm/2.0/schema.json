{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cdn.uat.accredify.io/schema/acra/bizfiles/profiles/public-accountant-firm/2.0/schema.json",
  "type": "object",
  "properties": {
    "entityName": {
      "$ref": "../../../common/definitions/2.0/schema.json#/definitions/entityName"
    },
    "formerNames": {
      "$ref": "../../../common/definitions/2.0/schema.json#/definitions/formerNames"
    },
    "uen": {
      "$ref": "../../../common/definitions/2.0/schema.json#/definitions/uen"
    },
    "registrationDate": {
      "$ref": "../../../common/definitions/2.0/schema.json#/definitions/date"
    },
    "commencementDate": {
      "$ref": "../../../common/definitions/2.0/schema.json#/definitions/date"
    },
    "status": {
      "type": "string"
    },
    "statusDate": {
      "$ref": "../../../common/definitions/2.0/schema.json#/definitions/date"
    },
    "constitution": {
      "$ref": "../../../common/definitions/2.0/schema.json#/definitions/constitution"
    },
    "address": {
      "$ref": "../../../common/definitions/2.0/schema.json#/definitions/address"
    },
    "changeOfAddressDate": {
      "$ref": "../../../common/definitions/2.0/schema.json#/definitions/date"
    },
    "changeOfNameDate": {
      "$ref": "../../../common/definitions/2.0/schema.json#/definitions/date"
    },
    "activities": {
      "$ref": "../../../common/definitions/2.0/schema.json#/definitions/activities"
    },
    "representatives": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "../../../common/definitions/2.0/schema.json#/definitions/person"
          }
        ],
        "properties": {
          "position": {
            "type": "string",
            "enum": [
              "Partner",
              "Partner under section 18(3)(c) of the Accountants Act",
              "Public Accountant Employee"
            ]
          },
          "publicAccountantRegistrationNo": {
            "type": "string"
          },
          "appointmentDate": {
            "$ref": "../../../common/definitions/2.0/schema.json#/definitions/date"
          },
          "resignationDate": {
            "$ref": "../../../common/definitions/2.0/schema.json#/definitions/date"
          }
        },
        "required": [
          "appointmentDate",
          "position"
        ]
      }
    },
    "receiptNumber": {
      "$ref": "../../../common/definitions/2.0/schema.json#/definitions/receiptNumber"
    },
    "receiptDate": {
      "$ref": "../../../common/definitions/2.0/schema.json#/definitions/date",
      "description": "The date at which this certificate was purchased in DD/MM/YYYY format"
    },
    "signatureName": {
      "$ref": "../../../common/definitions/2.0/schema.json#/definitions/signatureName"
    },
    "qrCode": {
      "$ref": "../../../common/definitions/2.0/schema.json#/definitions/qrCode"
    },
    "authenticationNumber": {
      "$ref": "../../../common/definitions/2.0/schema.json#/definitions/authenticationNumber"
    }
  },
  "required": [
    "entityName",
    "uen",
    "registrationDate",
    "commencementDate",
    "status",
    "statusDate",
    "constitution",
    "address",
    "activities",
    "representatives",
    "signatureName"
  ]
}