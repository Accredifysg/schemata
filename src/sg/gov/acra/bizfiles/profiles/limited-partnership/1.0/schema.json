{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cdn.uat.accredify.io/schema/acra/bizfiles/profiles/limited-partnership/1.0/schema.json",
  "type": "object",
  "properties": {
    "entityName": {
      "$ref": "../../../common/1.0/definitions/schema.json#/definitions/entityName"
    },
    "formerNames": {
      "$ref": "../../../common/1.0/definitions/schema.json#/definitions/formerNames"
    },
    "changeOfNameDate": {
      "$ref": "../../../common/1.0/definitions/schema.json#/definitions/date"
    },
    "uen": {
      "$ref": "../../../common/1.0/definitions/schema.json#/definitions/uen"
    },
    "registrationDate": {
      "$ref": "../../../common/1.0/definitions/schema.json#/definitions/date"
    },
    "commencementDate": {
      "$ref": "../../../common/1.0/definitions/schema.json#/definitions/date"
    },
    "status": {
      "type": "string"
    },
    "statusDate": {
      "$ref": "../../../common/1.0/definitions/schema.json#/definitions/date"
    },
    "renewalDate": {
      "$ref": "../../../common/1.0/definitions/schema.json#/definitions/date"
    },
    "expiryDate": {
      "$ref": "../../../common/1.0/definitions/schema.json#/definitions/date"
    },
    "giroRenewal": {
      "$ref": "../../../common/1.0/definitions/schema.json#/definitions/giroRenewal"
    },
    "lpCompliance": {
      "$ref": "../../../common/1.0/definitions/schema.json#/definitions/lpCompliance"
    },
    "address": {
      "$ref": "../../../common/1.0/definitions/schema.json#/definitions/address"
    },
    "changeOfAddressDate": {
      "$ref": "../../../common/1.0/definitions/schema.json#/definitions/date"
    },
    "activities": {
      "$ref": "../../../common/1.0/definitions/schema.json#/definitions/activities"
    },
    "managers": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "../../../common/1.0/definitions/schema.json#/definitions/person"
          }
        ],
        "properties": {
          "appointmentDate": {
            "$ref": "../../../common/1.0/definitions/schema.json#/definitions/date"
          }
        },
        "required": [
          "appointmentDate"
        ]
      }
    },
    "partners": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "../../../common/1.0/definitions/schema.json#/definitions/person"
          }
        ],
        "properties": {
          "position": {
            "enum": [
              "Owner",
              "General Partner",
              "Limited Partner",
              "Nominee/Trustee",
              "General Partner as Nominee / Trustee"
            ]
          },
          "entryDate": {
            "$ref": "../../../common/1.0/definitions/schema.json#/definitions/date"
          },
          "withdrawalDate": {
            "$ref": "../../../common/1.0/definitions/schema.json#/definitions/date"
          }
        },
        "required": [
          "position",
          "entryDate"
        ]
      }
    },
    "receiptNumber": {
      "$ref": "../../../common/1.0/definitions/schema.json#/definitions/receiptNumber"
    },
    "receiptDate": {
      "$ref": "../../../common/1.0/definitions/schema.json#/definitions/date",
      "description": "The date at which this certificate was purchased in DD/MM/YYYY format"
    },
    "signatureName": {
      "$ref": "../../../common/1.0/definitions/schema.json#/definitions/signatureName"
    },
    "qrCode": {
      "$ref": "../../../common/1.0/definitions/schema.json#/definitions/qrCode"
    },
    "authenticationNumber": {
      "$ref": "../../../common/1.0/definitions/schema.json#/definitions/authenticationNumber"
    }
  },
  "required": [
    "entityName",
    "uen",
    "registrationDate",
    "commencementDate",
    "status",
    "statusDate",
    "expiryDate",
    "giroRenewal",
    "lpCompliance",
    "address",
    "activities",
    "partners",
    "signatureName"
  ]
}
