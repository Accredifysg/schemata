        "buildingName": {
          "type": "string"
        },
        "formattedAddress": {
          "type": "string"
        },
        "invalidReason": {
          "type": "string"
        },
        "invalidReasonIndicator": {
          "type": "string"
        },
        "address1": {
          "type": "string"
        },
        "address2": {
          "type": "string"
        },
        "country": {
          "type": "string"
        }
      },
      "anyOf": [
        {
          "properties": {
            "type": {
              "const": "foreign"
            }
          },
          "required": [
            "type",
            "address1",
            "country",
            "formattedAddress"
          ]
        },
        {
          "properties": {
            "type": {
              "const": "local"
            }
          },
          "required": [
            "type",
            "streetName",
            "postalCode",
            "formattedAddress"
          ]
        },
        {
          "properties": {
            "type": {
              "const": "invalid"
            }
          },
          "required": [
            "invalidReason"
          ]
        }
      ],
      "dependentRequired": {
        "invalidReasonIndicator": [
          "invalidReason"
        ]
      },
      "additionalProperties": false
    },
