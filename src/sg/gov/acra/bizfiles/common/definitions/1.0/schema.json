    "activities": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": [
          "name",
          "description"
        ]
      },
      "additionalItems": false
    },
    "person": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "nationality": {
          "type": "string"
        },
        "address": {
          "$ref": "#/definitions/address"
        },
        "addressSource": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "id",
        "nationality",
        "address",
        "addressSource"
      ]
    },
    "shareholderGroup": {
      "allOf": [
        {
          "$ref": "#/definitions/share"
        }
      ],
      "properties": {
        "groupName": {
          "type": "string"
        },
        "shareholders": {
          "type": "array",
          "items": {
            "allOf": [
              {
                "$ref": "#/definitions/person"
              }
            ]
          }
        }
      },
      "required": [
        "groupName",
        "shareholders"
      ]
    },
    "shareholder": {
      "allOf": [
        {
          "$ref": "#/definitions/person"
        },
        {
          "$ref": "#/definitions/share"
        }
      ],
      "properties": {
        "addressChanged": {
          "type": "string"
        }
      }
    },
    "otherMembers": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "address": {
          "$ref": "#/definitions/address"
        },
        "memberType": {
          "type": "string",
          "enum": [
            "Liquidator",
            "Provisional Liquidator",
            "Receiver",
            "Judicial Manager"
          ]
        }
      },
      "required": [
        "name",
        "address",
        "memberType"
      ]
    },
    "receiptNumber": {
      "type": "string",
      "description": "The receipt number used in the purchase of this certificate",
      "examples": [
        "ACRAXXXXXXXXXX06"
      ]
    },
    "signatureName": {
      "type": "string",
      "description": "The name of the signatory",
      "examples": [
        "LEE TZE MING"
      ]
    },
    "qrCode": {
      "type": "string",
      "description": "base64 encoded image"
    },
    "authenticationNumber": {
      "type": "string",
      "description": "The number used to verify the authenticity of this certificate",
      "examples": [
        "IXXXXXXX49"
      ]
    },
    "entityName": {
      "type": "string",
      "description": "The name of the business or company",
      "examples": [
        "ACCREDIFY PTE. LTD."
      ]
    },
    "formerNames": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "uen": {
      "type": "string",
      "description": "The Unique Entity Number of the entity",
      "examples": [
        "201807660K"
      ]
    },
    "date": {
      "type": "string",
      "description": "Date in dd/mm/yyyy format",
      "examples": [
        "24/07/2022"
      ],
      "pattern": "^([0-2][0-9]|(3)[0-1])(/)(((0)[0-9])|((1)[0-2]))(/)\\d{4}$"
    },
    "entityStatus": {
      "type": "string"
    },
    "renewalByGiro": {
      "type": "string"
    },
    "companyType": {
      "type": "string",
      "description": "The type of company",
      "examples": [
        "EXEMPT PRIVATE COMPANY LIMITED BY SHARES"
      ]
    },
    "amalgamatedFrom": {
      "type": "string"
    },
    "amalgamatedWith": {
      "type": "string"
    },
    "amalgamatedToFrom": {
      "type": "string"
    },
    "conditions": {
      "type": "string"
    },
    "businessConstitution": {
      "type": "string",
      "enum": [
        "Sole-Proprietorship",
        "Partnership"
      ]
    },
    "share": {
      "type": "object",
      "properties": {
        "shares": {
          "type": "string"
        },
        "currency": {
          "type": "string"
        },
        "sharesType": {
          "type": "string",
          "enum": [
            "Ordinary",
            "Preference",
            "Others",
            "Treasury"
          ]
        }
      },
      "required": [
        "shares",
        "currency",
        "sharesType"
      ]
    },
    "charges": {
      "type": "object",
      "properties": {
        "chargeNumber": {
          "type": "string"
        },
        "dateRegistered": {
          "type": "string"
        },
        "amountSecured": {
          "type": "string"
        },
        "chargees": {
          "type": "string"
        },
        "currency": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "chargeNumber",
        "dateRegistered",
        "amountSecured",
        "chargees"
      ]
    },
    "auditFirms": {
      "type": "object",
      "properties": {
        "name": {
          "$ref": "#/definitions/entityName"
        }
      },
      "additionalProperties": false,
      "required": [
        "name"
      ]
    },
    "capitals": {
      "allOf": [
        {
          "$ref": "#/definitions/share"
        }
      ],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "Issued Share Capital",
            "Paid-Up Capital",
            "Treasury Shares"
          ]
        }
      },
      "required": [
        "type"
      ]
    },
    "entityType": {
      "type": "string",
      "description": "The type of business certificate",
      "enum": [
        "company",
        "business",
        "foreignCompany",
        "llp",
        "lp"
      ]
    }
  }
