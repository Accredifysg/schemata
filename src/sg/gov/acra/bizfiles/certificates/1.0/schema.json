{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cdn.uat.accredify.io/schema/acra/bizfiles/certificates/1.0/schema.json",
  "type": "object",
  "properties": {
    "productCode": {
      "$ref": "../../common/1.0/definitions/schema.json#/definitions/productCode"
    },
    "entityName": {
      "$ref": "../../common/1.0/definitions/schema.json#/definitions/entityName"
    },
    "companyName": {
      "type": "string",
      "description": "The name of the company",
      "examples": [
        "Accredify Private Limited"
      ]
    },
    "changeOfNameDate": {
      "$ref": "../../common/1.0/definitions/schema.json#/definitions/date",
      "description": "The date at which the name was changed"
    },
    "incorporationDate": {
      "$ref": "../../common/1.0/definitions/schema.json#/definitions/date",
      "description": "The incorporation date of the company/business in DD/MM/YYYY format"
    },
    "registrationDate": {
      "$ref": "../../common/1.0/definitions/schema.json#/definitions/date",
      "description": "The registration date of the company/business in DD/MM/YYYY format"
    },
    "expiryDate": {
      "$ref": "../../common/1.0/definitions/schema.json#/definitions/date",
      "description": "The expiry date for this certificate in DD/MM/YYYY format"
    },
    "receiptDate": {
      "$ref": "../../common/1.0/definitions/schema.json#/definitions/date",
      "description": "The date at which this certificate was purchased in DD/MM/YYYY format"
    },
    "nameHistoryDate": {
      "$ref": "../../common/1.0/definitions/schema.json#/definitions/date",
      "description": "The date at which the entity name changes are recorded after"
    },
    "uen": {
      "$ref": "../../common/1.0/definitions/schema.json#/definitions/uen"
    },
    "companyType": {
      "$ref": "../../common/1.0/definitions/schema.json#/definitions/companyType"
    },
    "formerNames": {
      "type": "array",
      "description": "Former names that the company/business was known by and the date that the names were no longer used",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "sno": {
            "type": "string",
            "description": "Sequence number of former name change",
            "examples": [
              "1",
              "2"
            ]
          },
          "name": {
            "type": "string",
            "examples": [
              "CEITO PTE. LTD."
            ]
          },
          "effectiveFrom": {
            "$ref": "../../common/1.0/definitions/schema.json#/definitions/date"
          }
        },
        "required": [
          "sno",
          "name",
          "effectiveFrom"
        ]
      }
    },
    "signatureName": {
      "$ref": "../../common/1.0/definitions/schema.json#/definitions/signatureName"
    },
    "country": {
      "$ref": "../../common/1.0/definitions/schema.json#/definitions/country"
    },
    "receiptNumber": {
      "$ref": "../../common/1.0/definitions/schema.json#/definitions/receiptNumber"
    },
    "qrCode": {
      "$ref": "../../common/1.0/definitions/schema.json#/definitions/qrCode"
    }
  },
  "anyOf": [
    {
      "properties": {
        "productCode": {
          "const": "I034"
        }
      },
      "required": [
        "country",
        "incorporationDate",
        "companyName"
      ]
    },
    {
      "properties": {
        "productCode": {
          "const": "I033"
        }
      },
      "required": [
        "registrationDate"
      ]
    },
    {
      "properties": {
        "productCode": {
          "const": "I032"
        }
      },
      "required": [
        "registrationDate"
      ]
    },
    {
      "properties": {
        "productCode": {
          "const": "I030"
        }
      },
      "required": [
        "registrationDate"
      ]
    },
    {
      "properties": {
        "productCode": {
          "const": "I031"
        }
      },
      "required": [
        "incorporationDate"
      ]
    }
  ],
  "dependentRequired": {
    "formerNames": [
      "changeOfNameDate"
    ]
  },
  "required": [
    "productCode",
    "entityName",
    "uen",
    "signatureName"
  ]
}
